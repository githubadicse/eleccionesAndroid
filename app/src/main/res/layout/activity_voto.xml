<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VotoActivity">

    <ProgressBar
        android:id="@+id/progressBarActa"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/lineBoton"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout7" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"


        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="188dp"
            android:layout_height="wrap_content"

            android:text="NUMERO DE MESA :"
            android:textColor="@color/design_default_color_primary"
            android:textSize="18sp"

            tools:text="NRO MESA :" />

        <TextView
            android:id="@+id/txtMesa"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:text="522002"
            android:textColor="@color/design_default_color_primary"
            android:textSize="18sp"
            tools:text="000954" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCantidatos"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearTotales"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <ListView
            android:id="@+id/lv_votos"
            android:layout_width="match_parent"
            android:layout_height="400dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearTotales"

        android:layout_width="379dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/lineBoton">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TOTAL VOTOS : "
            android:textAlignment="textEnd"
            android:textColor="@color/design_default_color_primary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTotalVotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_primary"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineBoton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginBottom="3dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnGrabarActa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="GRABAR ACTA" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>